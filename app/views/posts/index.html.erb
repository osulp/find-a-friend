<div class="container-fluid">
  <% if @abouts.length > 0 %>
    <h1>About Find-a-Friend</h1>
  <% end %>
  <% @abouts.each do |about| %>
    <%= raw about.about_text %>
    <br>
  <% end %>

  <ul class="nav nav-tabs" role="tablist">
    <li id="myTab" class="active"><a href="#today" data-toggle="tab">Groups Meeting Today</a></li>
    <% if current_user %>
      <li id="myTab"><a href="#yours" data-toggle="tab">Your Groups</a></li>
      <li id="myTab"><a href="#part" data-toggle="tab">Groups you are part of</a></li>
    <% end %>
  </ul>
  <div id="TabContent" class="tab-content">
    <div class="tab-pane fade in active" id="today">
      <h1>Groups Meeting Today</h1>
      <div id="displayed-groups">
        <%= render :partial => "posts", :locals => {:posts => @posts.today_posts} %>
      </div>
    </div>
    <% if current_user %>
      <div class="tab-pane fade" id="yours">
        <h1>Your Groups</h1>
        <%= render :partial => "posts", :locals => {:posts => @posts.user_future_posts} %>
      </div>
    <% end %>
    <% if current_user %>
      <div class="tab-pane fade" id="part">
        <h1>Groups You are Part Of</h1>
        <%= render :partial => "posts", :locals => {:posts => @posts.part_of_posts} %>
      </div>
    <% end %>

  </div>
</div>
